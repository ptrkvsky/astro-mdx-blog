<script>
  import { gsap } from 'gsap';

  let isOpen = false;

  console.log('hello');

  const toggleMenu = () => {
    console.log('click');
    const menu = document.querySelector('#nav-mobile');
    const menuItems = menu?.querySelectorAll('#nav-mobile a');

    if (!menu || !menuItems) return;

    if (isOpen) {
      // Close the menu
      gsap.to(Array.from(menuItems).reverse(), {
        opacity: 0,
        stagger: 0.1, // Reverse stagger when closing
        duration: 0.3,
        ease: 'power1.inOut',
      });
      gsap.to(menu, {
        y: '-100%',
        delay: 0.2,
        duration: 0.3,
        ease: 'power1.inOut',
      });

      isOpen = false;
    } else {
      // Open the menu
      gsap.to(menu, { y: 0, duration: 0.3, ease: 'power1.inOut' });
      gsap.fromTo(
        menuItems,
        { opacity: 0, y: -20 },
        {
          opacity: 1,
          y: 0,
          stagger: 0.1, // Add stagger effect when opening
          delay: 0.3, // Delay to match the menu opening animation
          duration: 0.2,
          ease: 'power1.inOut',
        },
      );
      isOpen = true;
    }
  };
  const menu = document.querySelector('#burger-button');
  menu?.addEventListener('click', () => {
    toggleMenu();
  });
</script>

