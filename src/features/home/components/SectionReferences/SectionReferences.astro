---
import type { HomeSection } from '@features/home/queries/queryHome';
import { HeadingSection } from '../HeadingSection';
import Reference from './Reference/Reference.astro';
import { references } from './references.json';

interface Props {
  section: HomeSection;
}

const { section } = Astro.props;
---

<section id="section-references" class="bg-white sm:my-32 lg:my-32">
  <div class="bg-white">
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
      <div class="mx-auto max-w-2xl lg:mx-0">
        <HeadingSection title={section.title} />

        <p class="mt-2 text-lg leading-8 text-gray-600">
          {section.subTitle}
        </p>
      </div>
      <div
        class="mx-auto mt-10 grid max-w-2xl grid-cols-1 gap-x-16 gap-y-16 border-t border-gray-200 pt-10 sm:mt-16 sm:pt-16 lg:mx-0 lg:max-w-none lg:grid-cols-2"
      >
        {
          section?.projects?.map((project) => (
            <Reference
              year={project.year}
              technologies={project.technos}
              companyInfo={project.companyInfo}
              keypoints={project.keyPointsRaw}
            />
          ))
        }
      </div>
    </div>
  </div>
</section>
