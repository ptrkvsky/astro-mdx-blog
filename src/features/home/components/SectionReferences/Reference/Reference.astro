---
import Badge from '@components/Badge/Badge.astro';

interface Props {
  technologies: string[];
  year: string | number;
  company: {
    name: string;
    url: string;
    description: string;
  };
  actions: string[];
}

const { technologies, company, actions, year } = Astro.props;
---

<article class="flex max-w-xl flex-col items-start">
  <div class="flex items-center gap-x-4 text-xs">
    <time datetime="2020-03-16" class="text-gray-500">{year}</time>
    <div class="flex gap-2 flex-wrap">
      {technologies.map((technology) => <Badge label={technology} />)}
    </div>
  </div>
  <div class="group relative">
    <h3
      class="mt-3 text-lg font-semibold leading-6 text-gray-900 group-hover:text-gray-600"
    >
      <a target="_blank" href={company.url}>
        <span class="absolute inset-0"></span>
        {company.name}
      </a>
    </h3>
    <p class="mt-5 line-clamp-3 text-sm leading-6 text-gray-600">
      {company.description}
    </p>
    <ul
      class="mt-4 ml-0 px-0 flex flex-col gap-y-2 text-sm text-gray-600 list-disc pl-5"
    >
      {actions.map((action) => <li>{action}</li>)}
    </ul>
  </div>
</article>
